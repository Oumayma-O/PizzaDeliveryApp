<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PizzaDeliveryApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.OrderActivity"
            android:exported="false"
            android:theme="@style/OrderTheme"/>
        <activity
            android:name=".activities.DetailsActivity"
            android:exported="false"
            android:theme="@style/DetailsTheme" />
        <activity
            android:name=".activities.MainActivity2"
            android:exported="false"
            android:theme="@style/MainTheme" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:theme="@style/LoginTheme" />
        <activity
            android:name=".activities.GetStartedActivity"
            android:exported="false"
            android:theme="@style/GetStartedTheme" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>